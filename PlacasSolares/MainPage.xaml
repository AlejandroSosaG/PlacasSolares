<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlacasSolares.MainPage">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Solar System" FontSize="60" VerticalOptions="Start" HorizontalOptions="Center" TextColor="#cbeb15" Margin="0,0,0,250"></Label>
        <VerticalStackLayout Margin="0,0,0,100">
            <StackLayout Orientation="Horizontal" Margin="35,0,0,0">
                <Label Text="Usuario:" Margin="10" FontSize="Large"></Label>
                <Entry x:Name="IngresaUsuario" MinimumWidthRequest="200" FontSize="Large" BackgroundColor="LightGray"></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="0,20,0,0">
                <Label Text="Contraseña:" Margin="10" FontSize="Large"></Label>
                <Entry x:Name="IngresaContraseña" IsPassword="True" MinimumWidthRequest="200" FontSize="Large" BackgroundColor="LightGray"></Entry>
            </StackLayout>
            <Button Text="Iniciar sesión" Clicked="OnClicked" CornerRadius="20" Margin="40,50,40,0" FontSize="Large" ImageSource="acceder.png"></Button>
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>
